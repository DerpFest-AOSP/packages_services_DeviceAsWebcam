<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_high_quality_warning"
            android:drawableTint="@android:color/system_error_light"
            android:padding="8dp"
            android:text="@string/hq_warning_dialog_title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="@string/hq_warning_dialog_content_1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/hq_warning_dialog_content_2"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

        <CheckBox
            android:id="@+id/hq_warning_dont_show_again_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:text="@string/hq_warning_dialog_dont_show_again"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

        <Button
            android:id="@+id/hq_warning_ack_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/hq_warning_dialog_button_ack"
            android:textColor="@color/high_quality_ack_button"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
